@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class = "row pt-4">
        <div class="col-6">
            <div class="text-primary">
                Category List
            </div>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                + Create New Category
            </a>
        </div>
    </div>
</div>
<br/>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.Id
                </td>
                <td width="40%">
                    @obj.Name
                </td>
                 <td width="30%">
                    @obj.DisplayOrder
                </td>
                <td width="10%">
                    <button class="w-75 btn btn-primary mx-2">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"> 📝 Edit</a>
                    </button>
                </td>
                <td>
                    <button class="w-100 btn btn-danger">
                       <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"> Delete</a>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

