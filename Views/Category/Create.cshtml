
@model Category
<form method="post" asp-action="Edit">
  <div class="form-group border p-3 mt-4">
    <div class = "row pb-2">
        <h2 class="text-primary">Create Category</h2>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Name" class="pb-3"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder" class="pb-3"></label>
        <input asp-for="DisplayOrder" class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    
  <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
  <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
      Back To List
  </a>
  </div>
 
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
